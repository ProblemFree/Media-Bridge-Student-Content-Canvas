rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow anyone (even unauthenticated) to write verification codes
    match /verificationCodes/{docId} {
      allow create: if true;
      allow read: if true; // âœ… TEMPORARY: allow API route to query docs
      allow update: if true;
    }

    // Optional verified users collection
    match /verifiedUsers/{userId} {
      allow read: if true;
      allow write: if true;
    }

    // Your upload rule
    match /uploads/{docId} {
      allow create: if exists(/databases/$(database)/documents/verifiedUsers/$(request.resource.data.userId));
    }
  }
}
