rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Moderation access for admin users
    match /uploads/{docId} {
      allow create: if isVerifiedUser();
      allow read, update, delete: if isAdmin();
    }

    // Verified email record
    match /verifiedUsers/{userId} {
      allow read: if true;
      allow write: if request.auth.token.role == "admin";
    }

    // Let admins manage verification codes
    match /verificationCodes/{docId} {
      allow read, write: if isAdmin();
    }

    // Utility functions
    function isAdmin() {
      return request.auth != null && request.auth.token.role == "admin";
    }

    function isVerifiedUser() {
      return exists(/databases/$(database)/documents/verifiedUsers/$(request.resource.data.userId));
    }
  }
}